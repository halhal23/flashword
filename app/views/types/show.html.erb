<h1><%= @type.name %></h1>
<%= link_to "単語追加", "/insert/#{@type.id}", class: "btn btn-outline-secondary ml-auto" %>
<% if @words.present? %>
  <table class="table table-striped table-dark">
  <thead>
  <tr>
  <th scope="col">title</th>
  <th scope="col">answer</th>
  <th scope="col">created_at</th>
  <th scope="col">options</th>
  </tr>
  </thead>
  <% @words.each do |word| %>
      <tbody>
      <tr>
      <th scope="row"><%= word.title %></th>
      <td><%= simple_format(word.answer) %></td>
      <td><%= word.created_at.strftime("%Y/%m/%d %H:%M") %></td>
      <td>
        <%= link_to "編集", "#", class: "btn btn-outline-warning" %>
        <%= link_to "削除", word_path(word.id), class: "btn btn-outline-danger", method: "delete", data: { confirm: "realy?"} %>
      </td>
      </tr>
      </tbody>
    <% end %>
  </table>
<% end %>